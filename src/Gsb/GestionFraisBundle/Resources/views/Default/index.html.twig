{# src/Gsb/GestionFraisBundle/Resources/views/Default/index.html.twig #}

{% extends "::layout.html.twig" %}

{% block body %}

<div class="col-xs-12 col-sm-8 col-md-7 col-lg-6" id="contenu"
	style="padding-top: 15px;">
    
    {# S'il y a une alerte, on l'affiche dans un joli cadre #}
    {% include "GsbGestionFraisBundle:Default:alert.html.twig" %}
    
	<form class="well"
		method="POST" action="{{ path('gsb_gestion_frais_homepage') }}">
		<legend>Identification utilisateur</legend>
		<fieldset>
			<div class="form-group">
				<label for="nom"
					class="sr-only">
				</label>
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-user"></span>
					</span>
					<input id="login" 
						class="form-control"
						placeholder="votre login"
						type="text"
						name="login"
						size="30"
						maxlength="45">
				</div>
			</div>
			<div class="form-group">
				<label for="mdp"
					class="sr-only">
				</label>
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-lock"></span>
					</span>
					<input id="mdp" 
						class="form-control"
						placeholder="votre mot de passe"
						type="password"
						name="mdp"
						size="30"
						maxlength="45">
				</div>
			</div>
		</fieldset>
		<div class="form-group">
			<button class="btn btn-primary" 
				type="submit"
				value="Valider"
				name="valider">
				valider
			</button>
			<button class="btn btn-danger"
				type="reset"
				value="Annuler"
				name="annuler">
				annuler
			</button>
		</div>
	</form>
</div>
{% endblock %}

