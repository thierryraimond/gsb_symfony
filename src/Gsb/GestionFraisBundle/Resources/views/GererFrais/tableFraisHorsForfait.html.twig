{# src/Gsb/GestionFraisBundle/Resources/views/GererFrais/tableFraisHorsForfait.html.twig #}

<div class="panel panel-info table-responsive">
    <table class="table table-striped table-condensed">
        <div class="panel-heading">
            Descriptif des éléments hors forfait 
            <i>
            {% if nbLignesHorsforfait == 0 %}
                aucun frais hors forfait saisi
            {% endif %}
            </i>
        </div>
        <thead>
            <tr>
                <th class="date">Date</th>
                <th class="libelle">Libellé</th>
                <th style="text-align:right" class="montant">Montant</th>
                <th class="action"></th>
            </tr>
        </thead>
        <tbody>
        {% for unFraisHorsForfait in lesFraisHorsForfait %}
            <tr>
                <td>{{ unFraisHorsForfait.date }}</td>
                <td>{{ unFraisHorsForfait.libelle }}</td>
                <td style="text-align:right">{{ unFraisHorsForfait.montant }} €</td>
                <td>
                    <a href="{{ path('gsb_gestion_frais_gerer_supprimer', 
                        {'idFrais': unFraisHorsForfait.id}) }}"
                        onclick="return confirm
                        ('Voulez-vous vraiment supprimer ce frais?');">
                        Supprimer ce frais
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>