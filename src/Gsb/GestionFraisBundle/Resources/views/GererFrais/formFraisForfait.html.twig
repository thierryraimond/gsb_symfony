{# src/Gsb/GestionFraisBundle/Resources/views/GererFrais/formFraisForfait.html.twig #}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Eléments forfaitisés</h3>
    </div>
    <div class="panel-body">
        <div class="col-lg-12">
            <form class="form-horizontal" method="POST" 
                action="{{ path('gsb_gestion_frais_saisirForfait') }}">
                <fieldset>
                {% for unFrais in lesFraisForfait %}
                    <div class="row">
                        <div class="form-group">
                            <label for="idFrais" 
                                class="col-xs-6 col-sm-4 col-md-3 col-lg-3
                                control-label">
									{{ unFrais.libelle }} 
                            </label>
                            <label for="forfaitmontant" 
                                class="col-xs-0 col-sm-2 col-md-2 col-lg-2
                                control-label"
                                id="forfaitmontant">
                                <i>({{ unFrais.forfaitmontant }} €)</i>
                            </label>
                            <div class="col-xs-6 col-sm-2 col-md-2 col-lg-1">
                                <input type="text" 
                                    class="form-control"
                                    id="idFrais"
                                    name="lesFrais[{{ unFrais.idfrais }}]" 
                                    size="10"
                                    maxlength="5" 
                                    value="{{ unFrais.quantite }}" >
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </fieldset>
                <div class="form-group">
                    <button class="btn btn-primary" 
                        id="ok"
                        type="submit"
                        value="Valider"
                        name="valider">
                        Valider
                    </button>
                    <button class="btn btn-danger"
                        id="annuler"
                        type="reset"
                        value="Effacer"
                        name="effacer">
                        Effacer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>