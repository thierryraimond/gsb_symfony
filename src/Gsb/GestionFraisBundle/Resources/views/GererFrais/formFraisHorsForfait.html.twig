{# src/Gsb/GestionFraisBundle/Resources/views/GererFrais/formFraisHorsForfait.html.twig #}

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Nouvel élément hors forfait</h3>
    </div>
    <div class="panel-body">
        <div class="col-lg-12">
            <form class="form-horizontal" 
                action="{{ path('gsb_gestion_frais_saisirHorsForfait') }}"
                method="post">
                <fieldset>
                    <div class="row">
                        <div class="form-group">
                            <label for="txtDateHF"
                                id="lbDateHF"
                                class="col-xs-0 col-sm-4 col-md-3 col-lg-2
                                control-label">
                                Date : 
                            </label>
                        <div class="col-xs-12 col-sm-3 col-md-2 col-lg-2">
                            <div class="input-daterange input-group">
                                <input type="text" 
                                    id="txtDateHF"
                                    class="form-control"
                                    placeholder="dd/mm/yyyy"
                                    name="dateFrais"
                                    size="10" 
                                    maxlength="10"
                                    value=""
                                    readonly 
								/>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar">
                                    </span>
                                </span>
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="txtLibelleHF"
                                id="lbLibelleHF"
								class="col-xs-0 col-sm-4 col-md-3 col-lg-2
								control-label">
								Libellé :
							</label>
							<div class="col-xs-12 col-sm-8 col-md-9 col-lg-10">
                                <input type="text" 
                                    id="txtLibelleHF"
                                    class="form-control"
                                    placeholder="Libellé" 
                                    name="libelle" 
                                    size="100" 
                                    maxlength="100" 
                                    value="" 
                                />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="txtMontantHF"
                                id="lbMontantHF"
                                class="col-xs-0 col-sm-4 col-md-3 col-lg-2
                                control-label">
                                Montant : 
                            </label>
                            <div class="col-xs-12 col-sm-3 col-md-2 col-lg-2">
                                <div class="input-group">
                                    <input type="text" 
                                        id="txtMontantHF"
                                        class="form-control"
                                        placeholder="Montant"
                                        name="montant"
                                        size="10" 
                                        maxlength="10"
                                        value="" 
                                        style="text-align:right"
                                    />
                                    <span class="input-group-addon">€
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-group">
                    <button class="btn btn-success" 
                        id="ajouter"
                        type="submit"
                        value="Ajouter"
                        name="ajouter">
                        Ajouter
                    </button>
                    <button class="btn btn-danger"
                        id="annuler"
                        type="reset"
                        value="Effacer"
                        name="effacer">
                        Effacer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>